= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label '标题'
    = f.text_field :title
  .field
    = f.label '状态'
    = select_tag 'category[status]', options_for_select(show_status, @category.status)
  .field
    = f.check_box :on_left
    = f.label '是否在首页左侧导航显示'
  .actions
    = f.submit 'Save'
