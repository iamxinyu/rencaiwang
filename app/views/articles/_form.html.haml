= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :source
    = f.text_field :source
  .field
    = f.label :content
    = f.cktext_area :content, ckeditor: { language: 'zh-CN'}
  .field
    = f.label :region_id, '所属区域'
    = f.collection_select :region_id, @regions, :id, :name, {:prompt=>'', selected: (@article.region.id if @article.region)}
  .field
    = f.label :category_id, '投放栏目'
    = f.collection_select :category_id, @categories, :id, :title, {:prompt=>'', selected: (@article.category.id if @article.category)}
  .actions
    = f.submit 'Save'

= javascript_include_tag Ckeditor.cdn_url
